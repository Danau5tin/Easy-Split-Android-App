<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/image_button_outline_white_solid"
    android:padding="5dp">

    <TextView
        android:id="@+id/balanceRowText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/backgroundGrey"
        app:layout_constraintEnd_toEndOf="@+id/balanceRowText"
        app:layout_constraintStart_toStartOf="@+id/balanceRowText"
        app:layout_constraintTop_toBottomOf="@+id/balanceRowText" />

    <Button
        android:id="@+id/balanceSettleButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Settle"
        app:layout_constraintEnd_toEndOf="@+id/balanceRowText"
        app:layout_constraintStart_toStartOf="@+id/balanceRowText"
        app:layout_constraintTop_toBottomOf="@+id/view7" />
</androidx.constraintlayout.widget.ConstraintLayout>