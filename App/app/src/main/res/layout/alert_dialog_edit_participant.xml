<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/newNameCancelButton"
        style="@style/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:text="@android:string/cancel"
        app:layout_constraintEnd_toStartOf="@+id/newNameTextView"
        app:layout_constraintStart_toStartOf="@+id/newNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/newNameEditText" />

    <Button
        android:id="@+id/newNameUpdateButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="#9AEC3C"
        android:text="@string/common_google_play_services_update_button"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/newNameTextView"
        app:layout_constraintStart_toEndOf="@+id/newNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/newNameEditText" />

    <TextView
        android:id="@+id/newNameTextView"
        style="@style/standardWhiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Change Dan's name to..." />

    <EditText
        android:id="@+id/newNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/outline_primary_color"
        android:ems="10"
        android:hint="@string/new_name"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#000000"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="@+id/newNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/newNameTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>